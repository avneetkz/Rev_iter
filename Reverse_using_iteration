# bot = tob
# function for reversing string using iteration

def rev_iteration(str):
    rev= ' '
    for item in str:
        rev = item + rev
    return rev

# driver code

if __name__ == "__main__":
    str = input("Enter a string you want to reverse: ")
    print(f'{str} after reversing is {rev_iteration(str)}')
        
    
